# Slack Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Schedule Configuration (Cron format: minute hour * * *)
CRON_SCHEDULE=0 8 * * *
TIMEZONE=Europe/Berlin

# News Configuration
NEWS_KEYWORDS=retail innovation,autonomous delivery,last mile delivery,retail technology,grocery innovation
MAX_NEWS_ITEMS=10

# News Sources Configuration (optional - defaults to src/config/sources.json)
# NEWS_SOURCES_CONFIG=./src/config/sources.json

# NewsAPI Configuration (ENABLED by default - requires API key)
# Get your free API key from: https://newsapi.org/
# Free tier: 100 requests/day (sufficient for daily bot)
# NewsAPI provides access to 80,000+ news sources
NEWS_API_KEY=

# Scoring Weights (optional - defaults from sources.json)
# SCORE_WEIGHT_KEYWORD=0.4
# SCORE_WEIGHT_AUTHORITY=0.3
# SCORE_WEIGHT_FRESHNESS=0.2
# SCORE_WEIGHT_ENGAGEMENT=0.1

# Diversification Settings (optional - defaults from sources.json)
# MAX_NEWS_PER_SOURCE=3
# MIN_SOURCES_REQUIRED=2

# Server Configuration
PORT=3000
NODE_ENV=production

# Retry Configuration
# Maximum number of retry attempts for failed HTTP requests
RETRY_ATTEMPTS=3
# HTTP request timeout in milliseconds (30 seconds default)
HTTP_TIMEOUT=30000
# Base delay in milliseconds for exponential backoff (1 second default)
RETRY_BASE_DELAY=1000

# Cache Configuration
# Enable/disable caching (true/false)
ENABLE_CACHE=true
# TTL for RSS feed cache in seconds (6 hours = 21600)
CACHE_TTL_RSS=21600
# TTL for NewsAPI cache in seconds (24 hours = 86400)
CACHE_TTL_NEWSAPI=86400
# TTL for processed results cache in seconds (24 hours = 86400)
CACHE_TTL_PROCESSED=86400

# Circuit Breaker Configuration
# Failure rate threshold (0-1) to trip circuit breaker (50% default)
CIRCUIT_BREAKER_THRESHOLD=0.5
# Time in milliseconds to keep circuit open before retry (15 minutes = 900000)
CIRCUIT_BREAKER_TIMEOUT=900000
